# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ps1,rs,toml}]
indent_style = space
indent_size = 4

[*.{yml,manifest}]
indent_style = space
indent_size = 2

[*.lock]
indent_style = space
indent_size = 1
